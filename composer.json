{
    "name": "Cruzer Mini",
    "description": "MVC PHP CMS",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "cms",
        "Cruzer Mini"
    ],
    "homepage": "https://cruzersoftwares.com/cruzerMini",
    "support": {
        "issues": "https://github.com/cruzerMini"
    },
    "require": {
        "php" : ">=7",
        "nikic/fast-route": "^1.3",
        "envms/fluentpdo": "^1.1"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": ["core/framework/Cruzer.php", "core/framework/Handler.php", "core/framework/Routes.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
